<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verification">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3B5B5">

        <Button
            android:id="@+id/bt_addPv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Pv" />
    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:id="@+id/lv_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_verify"
        android:background="#9DA8EA" />

</RelativeLayout>